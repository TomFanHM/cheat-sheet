---
import Showcase from "../../components/Showcase";
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const heading = "Resources";
const paragraph =
  "From helpful tools and libraries to tutorials and forums, find everything you need in one place.";

const docs = await getCollection("resources");

const data = docs.map((el) => ({
  href: "/resources/" + el.slug,
  title: el.data.title,
  description: el.data.description,
  imageUrl: el.data.imageUrl,
  date: el.data.date,
  datetime: el.data.datetime,
}));
---

<Layout title={heading} description={paragraph}>
  <Showcase heading={heading} paragraph={paragraph} data={data} />
</Layout>
